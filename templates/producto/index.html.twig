{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <h1>Producto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idproducto</th>
                <th>FechaCreacion</th>
                <th>Cantidad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.idproducto }}</td>
                <td>{{ producto.fechaCreacion ? producto.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ producto.cantidad }}</td>
                <td>
                    <a href="{{ path('app_producto_show', {'idproducto': producto.idproducto}) }}">show</a>
                    <a href="{{ path('app_producto_edit', {'idproducto': producto.idproducto}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_producto_new') }}">Create new</a>
{% endblock %}
